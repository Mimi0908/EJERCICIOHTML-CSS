       .Form{
    box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 20px;
    width: 100%;
    height: 100%;
    padding: 15px 40px;
    background-color: white;
    border-radius:10px ;
}
.form-label{
    text-align: justify;
    display: block;
    font-weight: 700;
    padding: 10px;
    cursor: pointer;
}
.form-control{
    width: 100%;
    background-color: #fff;
    border: 3px solid transparent;
    border-radius: 3px;
    height: 45px;
    line-height: 45px;
    padding: 0 40px 0 10px;
    transition: .3x ease all;
    border: solid gray 1px;
}
.form-control:focus{
    border: 3px solid #0075FF;
    outline: none;
    box-shadow: 3px opx 30px rgba(163,163,163,0.4);
}
.error{
    font-size: 12px;
    margin-bottom: 0;
    display: none;
}
.error-activo{
    display: block;
}
.form-grup, .form_mensj{
    grid-column: span 3;
}
.form-grup{
    text-align: center;
    margin: auto;
    display: inline;
    margin-top:10px;
    width: 100%;
}
.btn{
    height: 45px;
    width: 140px;
    font-weight: bold;
    border-radius: 50px;
    cursor: pointer;
    transition: .1x ease all;
}
.Form .btn:hover{
    color: white;
}

.form_mensj{
    height: 45px;
    line-height: 45px;
    background: #F66060;
    padding: 0 15px;
    border-radius: 3px;
    display: none;
}
.form_mensj-activo{
    height: 45px;
    line-height: 45px;
    background: #F66060;
    padding: 0 15px;
    border-radius: 3px;
    display: block;
}
.form_mensj p{
    margin: 0;
    font-weight: 700;
}
.enviado{
    font-size: 14px;
    color:#119200;
    display: none;
}
.enviado-activo{
    display: block;
}

.cuerpoF{
    background: linear-gradient(to right,#f2cfbb80,#f2e1d896 );
}

/*validacion*/
.form-label-incorrecto{
    color: #bb2929;
    display: block;
    font-weight: 700;
    padding: 10px;
    cursor: pointer;
}
.form-label-correcto{
    color: #119200;
    display: block;
    font-weight: 700;
    padding: 10px;
    cursor: pointer;
}
.form-input-incorrecto{
    border: 3px solid #bb2929;
}
.form-input-correcto{
    border: 3px solid #119200;
}
.main{
    max-width: 70%;
    height: 100%;
    margin: auto;
    padding: 40px;
    
}
.main h1{
    font-weight: 700;
    margin: 20px;
    text-align: center;
}
.volver{
    text-align: left;
    text-decoration: none;
    color: black;
    grid-column: span 3;
}
.title{
    grid-column: span 3;
}
